<%- include("./../partials/header.ejs") %>
<div class="container"><%- include("./../partials/messages.ejs")%></div>
<div class="bg-light py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0">
        <a href="/">Home</a> <span class="mx-2 mb-0">/</span>
        <strong class="text-black">Cart</strong>
      </div>
    </div>
  </div>
</div>
<div class="mt-5"></div>
<%if(cart){%>
<div class="container">
  <table class="table alignmiddle">
    <tr>
      <!-- <th>Image</th> -->
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Action</th>
      <th>Subtotal</th>
    </tr>

    <% var total = 0; %> <% cart.forEach(function(product){ %> <% var sub =
    parseFloat(product.qty * product.price).toFixed(2) %> <% total += +sub %>
    <tr>
      <td><%= product.title %></td>
      <td>Rs.<%= product.price %></td>
      <td><%= product.qty %></td>
      <td>
        <a href="/cart/update/<%= product.title %>?action=add">+</a>&nbsp;
        <a href="/cart/update/<%= product.title %>?action=remove">-</a>&nbsp;
        <a href="/cart/update/<%= product.title %>?action=clear">Clear</a>&nbsp;
      </td>
      <td>Rs.<%= sub %></td>
    </tr>
    <% }); %>
    <tr>
      <td colspan="5" align="left">
        <b>Total: </b> Rs.<%= parseFloat(total).toFixed(2) %>
      </td>
    </tr>
    <tr>
      <td>
        <a class="clearcart btn btn-danger" href="/cart/item/clear"
          >Clear cart</a
        >
      </td>
      <td colspan="5" align="right">
        <a
          class="btn btn-primary buynow"
          href="/cart/checkout?action=<%=total%>"
          >Buy now</a
        >
      </td>
    </tr>
  </table>
</div>

<%}else{%>
<h1 style="text-align: center">No Items added</h1>
<%}%> <%- include("./../partials/footer.ejs") %>
